<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Edit Bouldering Spot</h1>
  <div class="col-6 offset-3">
    <form action="/boulder-spots/<%= spot._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="boulderSpot[title]"
          value="<%= spot.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="boulderSpot[location]"
          value="<%= spot.location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="boulderSpot[image]"
          value="<%= spot.image %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="boulderSpot[description]">
<%= spot.description%></textarea
        >
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Bouldering Spot</button>
      </div>
    </form>
    <a href="/boulder-spots/<%= spot._id %>">Back to Bouldering Spots</a>
  </div>
</div>
