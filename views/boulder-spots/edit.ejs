<% layout('layouts/boilerplate')%>
<h2>Edit Bouldering Spot</h2>
<form action="/boulder-spots/<%= spot._id %>?_method=PUT" method="post">
  <div>
    <label for="title">Title</label>
    <input type="text" name="boulderSpot[title]" id="title" value="<%= spot.title %>" />
  </div>
  <div>
    <label for="location">Location</label>
    <input type="text" name="boulderSpot[location]" id="location" value="<%= spot.location %>" />
  </div>
  <button>Edit spot</button>
  <a href="/boulder-spots/<%= spot._id %>">Back to bouldering spot</a>
</form>
